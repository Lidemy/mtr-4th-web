// mixin
mixin head_block(headInfo)  
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=notosanstc&display=swap")
    link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap")
    link(rel='stylesheet' href='css/main.min.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    title #{headInfo.title} | Lidemy 程式導師實驗計畫第四期

// layout
doctype html
html(lang='en')

  block head
    +head_block('default')

  body
    block header
      include header.pug
    .wrapper
      block content
    block footer
      include footer.pug
  script(src="js/app.min.js")
