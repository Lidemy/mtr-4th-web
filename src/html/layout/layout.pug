// mixin
mixin head_block(headInfo)  
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='css/main.min.css')
    title #{headInfo.title} | Lidemy 程式導師實驗計畫第四期

// layout
doctype html
html(lang='en')

  block head
    +head_block('default')

  body
    block header
      include header.pug
    .wrapper
      block content
    block footer
      include footer.pug

    // ignore me
    script(defer src="js/index.bundle.js")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap")

